<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"
	xsi:schemaLocation="http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.1.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	
	<context:annotation-config />
		
    <bean class="hb.cinema.pk.board.BoardController" scope="singleton" autowire="byName" />
    <bean class="hb.cinema.pk.board.reply.BoardRCont" scope="singleton" autowire="byName" />
    <bean class="hb.cinema.pk.event.EventController" scope="singleton" autowire="byName" />
    <bean class="hb.cinema.pk.event.reply.EventRCont" scope="singleton" autowire="byName" />    
    <bean class="hb.cinema.pk.admin.AdminController" scope="singleton" autowire="byName" />
    <bean class="hb.cinema.pk.media.MediaController" scope="singleton" autowire="byName" />
    <bean class="hb.cinema.pk.reser.ReserController" scope="singleton" autowire="byName" />
    <bean class="hb.cinema.pk.user.UserController" scope="singleton" autowire="byName" />
    
</beans>